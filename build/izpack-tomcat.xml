<?xml version="1.0" encoding="US-ASCII" standalone="yes"?>
<installation version="1.0">
   <info>
      <appname>Servlex</appname>
      <appversion>0.10.0</appversion>
      <appsubpath>servlex</appsubpath>
      <authors>
         <author email="fgeorges@servlex.net" name="Florent Georges"/>
      </authors>
      <url>http://servlex.net/</url>
      <uninstaller name="uninstaller.jar" write="yes"/>
      <requiresjdk>no</requiresjdk>
      <writeinstallationinformation>no</writeinstallationinformation>
      <pack200/>
      <run-privileged condition="izpack.windowsinstall.vista|izpack.windowsinstall.7"/>
   </info>
   <guiprefs height="480" resizable="no" width="640">
      <modifier key="useFlags" value="yes"/>
      <modifier key="langDisplayType" value="default"/>
   </guiprefs>
   <locale>
      <langpack iso3="eng"/>
   </locale>
   <!-- TODO: Add a panel at the end, pointing to the home page of
        the newly installed server, and to the README file in the
        install dir. -->
   <!-- TODO: Add also a way to ask for the port number during the
        installation process. -->
   <panels>
      <panel classname="CheckedHelloPanel"/>
      <panel classname="PacksPanel"/>
      <panel classname="TargetPanel"/>
      <panel classname="InstallPanel"/>
      <panel classname="FinishPanel"/>
   </panels>
   <packs>
      <pack name="Servlex" preselected="yes" required="yes">
         <description>The Servlex server, pre-packaged, including Apache Tomcat 8.0.22.</description>
         <file src="README-SERVLEX-TOMCAT"               targetdir="$INSTALL_PATH"/>
         <file src="servlex-0.10.0/hello-world/"             targetdir="$INSTALL_PATH"/>
         <file src="servlex-0.10.0/hello-world-0.10.0.xaw" targetdir="$INSTALL_PATH"/>
         <file src="apache-tomcat-9.0.0.M1/LICENSE"        targetdir="$INSTALL_PATH"/>
         <file src="apache-tomcat-9.0.0.M1/NOTICE"         targetdir="$INSTALL_PATH"/>
         <file src="apache-tomcat-9.0.0.M1/RELEASE-NOTES"  targetdir="$INSTALL_PATH"/>
         <file src="apache-tomcat-9.0.0.M1/RUNNING.txt"    targetdir="$INSTALL_PATH"/>
         <!-- TODO: Add the execution bit to the files in bin/. -->
         <file src="apache-tomcat-9.0.0.M1/bin/"           targetdir="$INSTALL_PATH"/>
         <file src="apache-tomcat-9.0.0.M1/conf/"          targetdir="$INSTALL_PATH"/>
         <file src="apache-tomcat-9.0.0.M1/lib/"           targetdir="$INSTALL_PATH"/>
         <file src="apache-tomcat-9.0.0.M1/logs/"          targetdir="$INSTALL_PATH"/>
         <file src="apache-tomcat-9.0.0.M1/profiling/"     targetdir="$INSTALL_PATH"/>
         <file src="apache-tomcat-9.0.0.M1/repo/"          targetdir="$INSTALL_PATH"/>
         <file src="apache-tomcat-9.0.0.M1/temp/"          targetdir="$INSTALL_PATH"/>
         <file src="apache-tomcat-9.0.0.M1/webapps/"       targetdir="$INSTALL_PATH"/>
         <file src="apache-tomcat-9.0.0.M1/work/"          targetdir="$INSTALL_PATH"/>
         <parsable targetfile="$INSTALL_PATH/conf/catalina.properties" type="java"/>
      </pack>
   </packs>
</installation>
